" vim options :: BEGIN
"""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
if &term =~ '256color'
  " disable Background Color Erase (BCE) so that color schemes
  " render properly when inside 256-color tmux and GNU screen.
  " see also http://snk.tuxfamily.org/log/vim-256color-bce.html
  set t_ut=
endif

syntax on
filetype on

set nocompatible
"set visualbell

set encoding=utf-8
set fileencodings=utf-8,cp949,default,latin1
set termencoding=utf-8

set number
"set list
set ruler

"set tabstop=4
set softtabstop=4
set shiftwidth=4
set expandtab
"set smarttab

"set cindent
set autoindent
"set smartindent

set showmatch
set backspace=indent,eol,start
set backspace=2

set paste
set history=500
set hlsearch

set wrapscan
"""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
" vim options :: END
